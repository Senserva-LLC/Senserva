<Page
    x:Class="Siemserva.Views.TargetsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Siemserva.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:uer="using:Uno.Extensions.Reactive.UI"
    xmlns:ut="using:Uno.Themes"
    xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

	<Page.Resources>
		<DataTemplate x:Key="TargetsTemplate">
			<utu:AutoLayout
                Padding="16"
                CornerRadius="4"
                Orientation="Horizontal"
                PrimaryAxisAlignment="Center"
                Spacing="16">
				<utu:AutoLayout
                    utu:AutoLayout.PrimaryAlignment="Stretch"
                    PrimaryAxisAlignment="Center"
                    Spacing="8">

					<TextBlock
                        Foreground="{ThemeResource OnSurfaceBrush}"
                        Style="{StaticResource TitleSmall}"
                        Text="{Binding Name}"
                        TextWrapping="Wrap" />

					<TextBlock
                        Foreground="{ThemeResource OnSurfaceMediumBrush}"
                        Text="{Binding Description}"
                        TextWrapping="Wrap" />
				</utu:AutoLayout>
			</utu:AutoLayout>
		</DataTemplate>

		<DataTemplate x:Key="EmptyTemplate">
			<utu:AutoLayout
                Padding="32,0"
                CounterAxisAlignment="Center"
                PrimaryAxisAlignment="Center"
                Spacing="24">
				<BitmapIcon
                    Width="72"
                    Height="70"
                    UriSource="{ThemeResource Empty_Notification}" />
				<TextBlock
                    Foreground="{ThemeResource OnSurfaceBrush}"
                    Style="{StaticResource TitleLarge}"
                    Text="No Targets Yet"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
				<TextBlock
                    Foreground="{ThemeResource OnSurfaceBrush}"
                    Style="{StaticResource TitleMedium}"
                    Text="Targets will appear here."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
				<Button
                    Padding="16,10,24,10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    uen:Navigation.Request="-"
                    Content="Close"
                    CornerRadius="4"
                    Foreground="{ThemeResource OnSecondaryContainerBrush}"
                    Style="{StaticResource FilledTonalButtonStyle}">
					<ut:ControlExtensions.Icon>
						<PathIcon Data="{StaticResource Icon_Close}" Foreground="{ThemeResource OnSecondaryContainerBrush}" />
					</ut:ControlExtensions.Icon>
				</Button>
			</utu:AutoLayout>
		</DataTemplate>

		<DataTemplate x:Key="OverviewTemplate">
			<utu:AutoLayout
                Padding="16"
                CornerRadius="4"
                Orientation="Horizontal"
                PrimaryAxisAlignment="Center"
                Spacing="16">
				<utu:AutoLayout
                    utu:AutoLayout.PrimaryAlignment="Stretch"
                    PrimaryAxisAlignment="Center"
                    Spacing="8">

					<TextBlock
                        Foreground="{ThemeResource OnSurfaceBrush}"
                        Style="{StaticResource TitleSmall}"
                        Text="{Binding}"
                        TextWrapping="Wrap" />

				</utu:AutoLayout>
			</utu:AutoLayout>
		</DataTemplate>

	</Page.Resources>

	<utu:AutoLayout PrimaryAxisAlignment="Stretch">
		<utu:NavigationBar
            utu:AutoLayout.PrimaryAlignment="Auto"
            Content="Targets"
            Style="{StaticResource ChefsModalNavigationBarStyle}" />
		<utu:AutoLayout
            Padding="16"
            uen:Region.Attached="True"
            utu:AutoLayout.PrimaryAlignment="Stretch"
            Background="{ThemeResource BackgroundBrush}">
			<utu:TabBar
                uen:Region.Attached="True"
                Background="{ThemeResource BackgroundBrush}"
                Style="{StaticResource TopTabBarStyle}">
				<utu:TabBarItem
                    uen:Region.Name="CloudTab"
                    Content="Cloud"
					IsSelected="True"
                    Foreground="{ThemeResource OnSurfaceMediumBrush}"
                    />
				<utu:TabBarItem
                    uen:Region.Name="WindowsTab"
                    Content="Windows"
                    Foreground="{ThemeResource OnSurfaceMediumBrush}" />
				<utu:TabBarItem
                    uen:Region.Name="IPRangeTab"
                    Content="IPRange"
                    Foreground="{ThemeResource OnSurfaceMediumBrush}" />
				<utu:TabBarItem
                    uen:Region.Name="LinuxTab"
                    Content="Linux"
                    Foreground="{ThemeResource OnSurfaceMediumBrush}" />
				<utu:TabBarItem
                    uen:Region.Name="MacTab"
                    Content="Mac"
                    Foreground="{ThemeResource OnSurfaceMediumBrush}" />
			</utu:TabBar>

			<ScrollViewer>
				VerticalContentAlignment="Center"
                utu:AutoLayout.PrimaryAlignment="Stretch"
                HorizontalScrollMode="Enabled">
				<Grid uen:Region.Attached="True" uen:Region.Navigator="Visibility">
						<!--  Cloud  -->
						<Grid
							Grid.Row="0" Grid.Column="0"
                        Padding="0,16"
                        HorizontalAlignment="Center"
                        uen:Region.Name="CloudTab"
                        ColumnDefinitions="250, 250"
                        RowDefinitions="Auto, *"
                        Visibility="Collapsed">
							<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
								<TextBlock >Azure Subscriptions</TextBlock>
								<uer:FeedView
									x:Name="AzureSubscriptionsFeed"
									Grid.Row="1"
									Grid.Column="0"
									NoneTemplate="{StaticResource EmptyTemplate}"
									Source="{Binding AzureSubscriptions}">
									<DataTemplate>
										<utu:AutoLayout>
											<utu:AutoLayout
                                        Padding="0,16"
                                        Spacing="16"
                                        Visibility="Visible">
												<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
													<muxc:ItemsRepeater.Layout>
														<muxc:StackLayout Orientation="Vertical" Spacing="2" />
													</muxc:ItemsRepeater.Layout>
												</muxc:ItemsRepeater>
											</utu:AutoLayout>
										</utu:AutoLayout>
									</DataTemplate>
								</uer:FeedView>
							</StackPanel>
							<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
								<TextBlock>Azure Tenants</TextBlock>

								<uer:FeedView
									x:Name="AzureTenantsFeed"
									Grid.Row="1"
									Grid.Column="1"
									NoneTemplate="{StaticResource EmptyTemplate}"
									Source="{Binding AzureTenants}">
									<DataTemplate>
										<utu:AutoLayout>
											<utu:AutoLayout
												Padding="0,16"
												Spacing="16"
												Visibility="Visible">
												<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
													<muxc:ItemsRepeater.Layout>
														<muxc:StackLayout Orientation="Vertical" Spacing="2" />
													</muxc:ItemsRepeater.Layout>
												</muxc:ItemsRepeater>
											</utu:AutoLayout>

										</utu:AutoLayout>
									</DataTemplate>
								</uer:FeedView>
							</StackPanel>
						</Grid>

						<!--  Windows  -->
						<Grid
                        Padding="0,16"
                        uen:Region.Name="WindowsTab"
                        ColumnDefinitions="250, 250, 250"
                        RowDefinitions="*, *, *"
                        Visibility="Collapsed">
							<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
								<TextBlock
                                            Style="{StaticResource LabelLarge}"
                                            Text="Domains"
                                            TextWrapping="Wrap" />
								<uer:FeedView
								x:Name="WindowsDomainsFeed"
								NoneTemplate="{StaticResource EmptyTemplate}"
								Source="{Binding Domains}">
									<DataTemplate>
										<utu:AutoLayout>
											<!--  Windows Domains  -->
											<utu:AutoLayout
                                        Padding="0,16"
                                        Spacing="16"
                                        Visibility="Visible">
												<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
													<muxc:ItemsRepeater.Layout>
														<muxc:StackLayout Orientation="Vertical" Spacing="2" />
													</muxc:ItemsRepeater.Layout>
												</muxc:ItemsRepeater>
											</utu:AutoLayout>
										</utu:AutoLayout>
									</DataTemplate>
								</uer:FeedView>
							</StackPanel>
							<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
								<TextBlock
                                            Style="{StaticResource LabelLarge}"
                                            Text="Workgroups"
                                            TextWrapping="Wrap" />
								<uer:FeedView
									x:Name="WindowsWorkgroupsFeed"
									NoneTemplate="{StaticResource EmptyTemplate}"
									Source="{Binding Workgroups}">
									<DataTemplate>
										<utu:AutoLayout>
											<!--  Windows Domains  -->
											<utu:AutoLayout
                                        Padding="0,16"
                                        Spacing="16"
                                        Visibility="Visible">
												<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
													<muxc:ItemsRepeater.Layout>
														<muxc:StackLayout Orientation="Vertical" Spacing="2" />
													</muxc:ItemsRepeater.Layout>
												</muxc:ItemsRepeater>
											</utu:AutoLayout>
										</utu:AutoLayout>
									</DataTemplate>
								</uer:FeedView>
							</StackPanel>
							<StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical">
								<TextBlock
                                            Style="{StaticResource LabelLarge}"
                                            Text="PCs"
                                            TextWrapping="Wrap" />
								<uer:FeedView
									x:Name="WindowsPCFeed"
									NoneTemplate="{StaticResource EmptyTemplate}"
									Source="{Binding PCs}">
									<DataTemplate>
										<utu:AutoLayout>
										<!--  Windows PCs  -->
											<utu:AutoLayout
												Padding="0,16"
												Spacing="16"
												Visibility="Visible">
												<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
													<muxc:ItemsRepeater.Layout>
														<muxc:StackLayout Orientation="Vertical" Spacing="2" />
													</muxc:ItemsRepeater.Layout>
												</muxc:ItemsRepeater>
											</utu:AutoLayout>
										</utu:AutoLayout>
									</DataTemplate>
								</uer:FeedView>
							</StackPanel>
						</Grid>

						<!--  Linux  -->
						<Grid
                        Padding="0,16"
                        uen:Region.Name="LinuxTab"
                        Visibility="Collapsed">
							<uer:FeedView
                            x:Name="LinuxFeed"
                            NoneTemplate="{StaticResource EmptyTemplate}"
                            Source="{Binding Linux}">
								<DataTemplate>
									<utu:AutoLayout>
										<!--  LinuxFeed  -->
										<utu:AutoLayout
                                        Padding="0,16"
                                        Spacing="16"
                                        Visibility="Visible">
											<TextBlock
                                            Foreground="{ThemeResource OnSurfaceBrush}"
                                            Style="{StaticResource LabelLarge}"
                                            Text="Linux"
                                            TextWrapping="Wrap" />
											<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
												<muxc:ItemsRepeater.Layout>
													<muxc:StackLayout Orientation="Vertical" Spacing="2" />
												</muxc:ItemsRepeater.Layout>
											</muxc:ItemsRepeater>
										</utu:AutoLayout>
									</utu:AutoLayout>
								</DataTemplate>
							</uer:FeedView>
						</Grid>

						<!--  Mac  -->
						<Grid
                        Padding="0,16"
                        uen:Region.Name="MacTab"
                        Visibility="Collapsed">
							<uer:FeedView
                            x:Name="MacFeed"
                            NoneTemplate="{StaticResource EmptyTemplate}"
                            Source="{Binding Mac}">
								<DataTemplate>
									<utu:AutoLayout>
										<!--  Mac  -->
										<utu:AutoLayout
                                        Padding="0,16"
                                        Spacing="16"
                                        Visibility="Visible">
											<TextBlock
                                            Foreground="{ThemeResource OnSurfaceBrush}"
                                            Style="{StaticResource LabelLarge}"
                                            Text="Mac"
                                            TextWrapping="Wrap" />
											<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
												<muxc:ItemsRepeater.Layout>
													<muxc:StackLayout Orientation="Vertical" Spacing="2" />
												</muxc:ItemsRepeater.Layout>
											</muxc:ItemsRepeater>
										</utu:AutoLayout>
									</utu:AutoLayout>
								</DataTemplate>
							</uer:FeedView>
						</Grid>

						<!--  IP Range  -->
						<Grid
                        Padding="0,16"
                        uen:Region.Name="IPRangeTab"
                        Visibility="Collapsed">
							<uer:FeedView
                            x:Name="IPRange"
                            NoneTemplate="{StaticResource EmptyTemplate}"
                            Source="{Binding IPRange}">
								<DataTemplate>
									<utu:AutoLayout>
										<!--  IPRange  -->
										<utu:AutoLayout
                                        Padding="0,16"
                                        Spacing="16"
                                        Visibility="Visible">
											<TextBlock
                                            Foreground="{ThemeResource OnSurfaceBrush}"
                                            Style="{StaticResource LabelLarge}"
                                            Text="IPRange"
                                            TextWrapping="Wrap" />
											<muxc:ItemsRepeater ItemTemplate="{StaticResource TargetsTemplate}" ItemsSource="{Binding Data}">
												<muxc:ItemsRepeater.Layout>
													<muxc:StackLayout Orientation="Vertical" Spacing="2" />
												</muxc:ItemsRepeater.Layout>
											</muxc:ItemsRepeater>
										</utu:AutoLayout>
									</utu:AutoLayout>
								</DataTemplate>
							</uer:FeedView>
						</Grid>

					</Grid>
			</ScrollViewer>
		</utu:AutoLayout>
	</utu:AutoLayout>
</Page>
