<Page
    x:Class="Simeserva.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simeserva.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:not_skia="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:ut="using:Uno.Themes"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Background="{ThemeResource BackgroundBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <x:Double x:Key="NavigationTabBarItemIconHeight">18</x:Double>
    </Page.Resources>
    <Grid uen:Region.Attached="True" utu:AutoLayout.PrimaryAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="RootGrid"
            Grid.Row="0"
            Grid.Column="1"
            uen:Region.Attached="True"
            uen:Region.Navigator="Visibility" />

        <utu:TabBar
            Grid.Row="1"
            Grid.Column="1"
            uen:Region.Attached="True"
            Style="{StaticResource BottomTabBarStyle}"
            Visibility="{utu:Responsive Normal=Visible,
                                        Wide=Collapsed}">
            <utu:TabBarItem
                uen:Region.Name="Home"
                utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                Content="Home">
                <utu:TabBarItem.Icon>
                    <PathIcon Data="{StaticResource Icon_Home}" />
                </utu:TabBarItem.Icon>
            </utu:TabBarItem>

            <utu:TabBarItem
                uen:Region.Name="Reports"
                utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                Content="Reports">
                <utu:TabBarItem.Icon>
                    <PathIcon Data="{StaticResource Icon_Reports}" />
                </utu:TabBarItem.Icon>
            </utu:TabBarItem>


            <utu:TabBarItem
                uen:Region.Name="-/Search"
                utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                Content="Search">
                <utu:TabBarItem.Icon>
                    <PathIcon Data="{StaticResource Icon_Search}" />
                </utu:TabBarItem.Icon>
            </utu:TabBarItem>

            <utu:TabBarItem
                uen:Region.Name="Commands"
                utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                Content="Commands">
                <utu:TabBarItem.Icon>
                    <PathIcon Data="{StaticResource Icon_Command}" />
                </utu:TabBarItem.Icon>
            </utu:TabBarItem>

            <utu:TabBarItem
                uen:Region.Name="Policies"
                utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                Content="Policies">
                <utu:TabBarItem.Icon>
                    <PathIcon Data="{StaticResource Icon_Rules}" />
                </utu:TabBarItem.Icon>
            </utu:TabBarItem>

            <utu:TabBarItem
                uen:Region.Name="FavoriteTechniques"
                utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                Content="Favorites">
                <utu:TabBarItem.Icon>
                    <PathIcon Data="{StaticResource Icon_Heart}" />
                </utu:TabBarItem.Icon>
            </utu:TabBarItem>

        </utu:TabBar>

        <utu:AutoLayout
            Grid.RowSpan="2"
            Width="100"
            Background="{ThemeResource SurfaceBrush}"
            Visibility="{utu:Responsive Normal=Collapsed,
                                        Wide=Visible}">
            <utu:TabBar
                uen:Region.Attached="True"
                utu:AutoLayout.PrimaryAlignment="Stretch"
                Style="{StaticResource VerticalTabBarStyle}">

                <utu:TabBarItem
                    uen:Region.Name="Home"
                    utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                    utu:TabBarItemExtensions.OnClickBehaviorsTarget="{Binding ElementName=RootGrid}"
                    Content="Home">
                    <utu:TabBarItem.Icon>
                        <PathIcon Data="{StaticResource Icon_Home}" />
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <utu:TabBarItem
                    uen:Region.Name="-/Search"
                    utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                    utu:TabBarItemExtensions.OnClickBehaviorsTarget="{Binding ElementName=RootGrid}"
                    Content="Search">
                    <utu:TabBarItem.Icon>
                        <PathIcon Data="{StaticResource Icon_Search}" />
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <utu:TabBarItem
                    uen:Region.Name="Commands"
                    utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                    utu:TabBarItemExtensions.OnClickBehaviorsTarget="{Binding ElementName=RootGrid}"
                    Content="Commands">
                    <utu:TabBarItem.Icon>
                        <PathIcon Data="{StaticResource Icon_Commands}" />
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <utu:TabBarItem
                    uen:Region.Name="Reports"
                    utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                    utu:TabBarItemExtensions.OnClickBehaviorsTarget="{Binding ElementName=RootGrid}"
                    Content="Reports">
                    <utu:TabBarItem.Icon>
                        <PathIcon Data="{StaticResource Icon_Reports}" />
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <utu:TabBarItem
                    uen:Region.Name="Policies"
                    utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                    utu:TabBarItemExtensions.OnClickBehaviorsTarget="{Binding ElementName=RootGrid}"
                    Content="Policies">
                    <utu:TabBarItem.Icon>
                        <PathIcon Data="{StaticResource Icon_Rules}" />
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <utu:TabBarItem
                    uen:Region.Name="FavoriteTechniques"
                    utu:TabBarItemExtensions.OnClickBehaviors="BackNavigation"
                    utu:TabBarItemExtensions.OnClickBehaviorsTarget="{Binding ElementName=RootGrid}"
                    Content="Favorites">
                    <utu:TabBarItem.Icon>
                        <PathIcon Data="{StaticResource Icon_Heart}" />
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>
            </utu:TabBar>
        </utu:AutoLayout>
    </Grid>
</Page>
